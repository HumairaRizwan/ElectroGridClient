<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.customer.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.customer.CustomerInsert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>customerUpdate</servlet-name>
    <servlet-class>com.customer.CustomerUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>customerUpdate</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>customerDelete</servlet-name>
    <servlet-class>com.customer.CustomerDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>customerDelete</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InsertRequest</servlet-name>
    <servlet-class>com.request.RequestInsert</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertRequest</servlet-name>
    <url-pattern>/insert</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>retrieve</servlet-name>
    <servlet-class>com.request.RequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>retrieve</servlet-name>
    <url-pattern>/retrieve</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updateRequest</servlet-name>
    <servlet-class>com.request.RequestUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateRequest</servlet-name>
    <url-pattern>/up</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>deleteRequest</servlet-name>
    <servlet-class>com.request.RequestDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteRequest</servlet-name>
    <url-pattern>/del</url-pattern>
  </servlet-mapping>
</web-app>